<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostGameActivity">

    <GridView
        android:id="@+id/host_game_gridview_down"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="30dp"
        android:columnWidth="30dp"
        android:horizontalSpacing="0dp"
        android:numColumns="10"
        android:verticalSpacing="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/host_game_text_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/host_game_gridview_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <GridView
        android:id="@+id/host_game_gridview_top"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="10dp"
        android:columnWidth="30dp"
        android:horizontalSpacing="0dp"
        android:numColumns="10"
        android:verticalSpacing="0dp"
        app:layout_constraintBottom_toTopOf="@+id/host_game_text_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/host_game_text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/host_game_gridview_top"
        app:layout_constraintEnd_toStartOf="@+id/copy_code_button"
        app:layout_constraintStart_toStartOf="@+id/host_game_gridview_top" />

    <Button
        android:id="@+id/copy_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/copy"
        app:layout_constraintBottom_toTopOf="@+id/host_game_gridview_top"
        app:layout_constraintEnd_toEndOf="@+id/host_game_gridview_top" />

</androidx.constraintlayout.widget.ConstraintLayout>